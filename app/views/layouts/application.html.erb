<!DOCTYPE html>
<html>
<head>
  <title>FollowFocus</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="logout_div group">
    <% if logged_in? %>
      <%= button_to "Log Out", session_url, :method => :delete, class: 'logout_button group' %>
    <% else %>
      <%= button_to "Log In", new_session_url, :method => :get, class: 'logout_button group' %>
    <% end %>
  </div>

  <% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
      <%= error %>
    <% end %>
  <% end %>

<%= yield %>

</body>
</html>
